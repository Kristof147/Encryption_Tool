<Window
    x:Class="Encryption_Tool.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Encryption_Tool"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="800"
    Height="450"
    mc:Ignorable="d">
    <Grid>

        <TabControl>
            <TabItem Header="Key Generation">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition MaxHeight="100" />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <Button
                        Name="BtnFolderKey"
                        Grid.Column="1"
                        Margin="20,20,20,20"
                        Click="BtnFolderKey_Click"
                        Content="Set folder">
                    </Button>
                    <Button
                        Name="BtnAES"
                        Grid.Column="2"
                        Margin="20,20,20,20"
                        Click="BtnAES_Click"
                        Content="Generate AES key/ IV">
                    </Button>
                    <Button
                        Name="BtnRSAPair"
                        Grid.Column="3"
                        Margin="20,20,20,20"
                        Click="BtnRSAPair_Click"
                        Content="Generate RSA key pair">
                    </Button>
                    <Button
                        Name="BtnHash"
                        Grid.Row="2"
                        Grid.Column="2"
                        Margin="20,20,20,20"
                        Click="BtnHash_Click"
                        Content="Check Hashes">
                    </Button>
                </Grid>

            </TabItem>
            <TabItem Header="AES">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition MaxHeight="100" />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <Label Content="Key:">
                    </Label>
                    <ComboBox Name="CmbAESKeys" Margin="35">
                    </ComboBox>
                    <Button
                        Name="BtnAESFolder"
                        Grid.Column="4"
                        Margin="20"
                        Click="BtnAESFolder_Click"
                        Content="Set folder">
                    </Button>
                    <Button
                        Name="BtnAESEncrypt"
                        Grid.Column="1"
                        Margin="20"
                        Click="BtnAESEncrypt_Click"
                        Content="Encrypt">
                    </Button>
                    <Button
                        Name="BtnAESDecrypt"
                        Grid.Column="2"
                        Margin="20"
                        Click="BtnAESDecrypt_Click"
                        Content="Decrypt">
                    </Button>
                    <Button
                        Name="BtnAESImage"
                        Grid.Column="3"
                        Margin="20"
                        Click="BtnAESImage_Click"
                        Content="Select Image">
                    </Button>
                    <Image
                        x:Name="ImageAes"
                        Grid.Row="1"
                        Grid.RowSpan="3"
                        Grid.Column="1"
                        Grid.ColumnSpan="3"
                        Margin="15" />
                </Grid>
            </TabItem>
            <TabItem Header="RSA">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition MaxHeight="100" />
                        <RowDefinition MaxHeight="100" />
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <Label Content="Public key:">
                    </Label>
                    <ComboBox Name="CmbRSAPubKey" Margin="35">
                    </ComboBox>
                    <Label Grid.Row="1" Content="Private key:">
                    </Label>
                    <ComboBox
                        Name="CmbRSAPriKey"
                        Grid.Row="1"
                        Margin="35">
                    </ComboBox>
                    <Button
                        Name="BtnRSAEncrypt"
                        Grid.Column="1"
                        Margin="20"
                        Click="BtnRSAEncrypt_Click"
                        Content="Encrypt">
                    </Button>
                    <Button
                        Name="BtnRSADecrypt"
                        Grid.Column="2"
                        Margin="20"
                        Click="BtnRSADecrypt_Click"
                        Content="Decrypt">
                    </Button>
                    <Button
                        Name="BtnRSAImage"
                        Grid.Column="3"
                        Margin="20"
                        Click="BtnRSAImage_Click"
                        Content="Select Image">
                    </Button>
                    <Button
                        Name="BtnRSAFolder"
                        Grid.Column="4"
                        Margin="20"
                        Click="BtnRSAFolder_Click"
                        Content="Set folder">
                    </Button>
                </Grid>
            </TabItem>
        </TabControl>

    </Grid>
</Window>
