<Window
    x:Class="Encryption_Tool.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Encryption_Tool"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="800"
    Height="450"
    mc:Ignorable="d">
    <Grid>

        <TabControl>
            <TabItem Header="Key Generation">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition ></ColumnDefinition>
                        <ColumnDefinition ></ColumnDefinition>
                        <ColumnDefinition ></ColumnDefinition>
                        <ColumnDefinition ></ColumnDefinition>
                        <ColumnDefinition ></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                    </Grid.RowDefinitions>
                    <Button Grid.Column="1" Margin="20,20,20,20" Content="Set folder" Name="BtnFolderKey" Click="BtnFolderKey_Click" ></Button>
                    <Button Grid.Column="2" Margin="20,20,20,20" Content="Generate AES key/ IV" Name="BtnAES" Click="BtnAES_Click"></Button>
                    <Button Grid.Column="3" Margin="20,20,20,20" Content="Generate RSA key pair" Name="BtnRSAPair" Click="BtnRSAPair_Click"></Button>
                    <Button Grid.Column="2" Grid.Row="2" Margin="20,20,20,20" Content="Check Hashes" Name="BtnHash" Click="BtnHash_Click"></Button>
                </Grid>

            </TabItem>
            <TabItem Header="AES">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition></ColumnDefinition>
                        <ColumnDefinition></ColumnDefinition>
                        <ColumnDefinition></ColumnDefinition>
                        <ColumnDefinition></ColumnDefinition>
                        <ColumnDefinition></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                    </Grid.RowDefinitions>
                    <Label Content="Key:"></Label>
                    <ComboBox Name="CmbAESKeys" Margin="35"></ComboBox>
                    <Button Grid.Column="4" Margin="20" Name="BtnAESFolder" Content="Set folder" Click="BtnAESFolder_Click"  ></Button>
                    <Button Grid.Column="1" Margin="20" Name="BtnAESEncrypt" Content="Encrypt" Click="BtnAESEncrypt_Click"  ></Button>
                    <Button Grid.Column="2" Margin="20" Name="BtnAESDecrypt" Content="Decrypt" Click="BtnAESDecrypt_Click" ></Button>
                    <Button Grid.Column="3" Margin="20" Name="BtnAESImage" Content="Select Image" Click="BtnAESImage_Click"></Button>
                    <Image Grid.Column="1" Grid.Row="1" Grid.ColumnSpan="3" Grid.RowSpan="3" Margin="15" x:Name="ImageAes"/>
                </Grid>
            </TabItem>
            <TabItem Header="RSA">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition></ColumnDefinition>
                        <ColumnDefinition></ColumnDefinition>
                        <ColumnDefinition></ColumnDefinition>
                        <ColumnDefinition></ColumnDefinition>
                        <ColumnDefinition></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                    </Grid.RowDefinitions>
                    <Label Content="Public key:"></Label>
                    <ComboBox Name="CmbRSAPubKey" Margin="35"></ComboBox>
                    <Label Content="Private key:" Grid.Row="1"></Label>
                    <ComboBox Name="CmbRSAPriKey" Margin="35" Grid.Row="1"></ComboBox>
                    <Button Grid.Column="1" Margin="20" Name="BtnRSAEncrypt" Content="Encrypt" Click="BtnRSAEncrypt_Click" ></Button>
                    <Button Grid.Column="2" Margin="20" Name="BtnRSADecrypt" Content="Decrypt" Click="BtnRSADecrypt_Click" ></Button>
                    <Button Grid.Column="3" Margin="20" Name="BtnRSAImage" Content="Select Image" Click="BtnRSAImage_Click"></Button>
                    <Button Grid.Column="4" Margin="20" Name="BtnRSAFolder" Content="Set folder" Click="BtnRSAFolder_Click"></Button>
                </Grid>
            </TabItem>
        </TabControl>

    </Grid>
</Window>
