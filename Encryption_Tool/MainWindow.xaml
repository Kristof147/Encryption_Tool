<Window
    x:Class="Encryption_Tool.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Encryption_Tool"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="800"
    Height="450"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Menu>
            <MenuItem Header="Aes">
                <MenuItem Click="AesSetImagePathClick" Header="Set Image Folder" />
                <MenuItem Click="AesSetTextPathClick" Header="Set Text Folder" />
            </MenuItem>
            <MenuItem Header="Rsa" />
        </Menu>

        <TabControl Grid.Row="1">
            <TabItem Header="Key Generation">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition MaxHeight="100" />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <Button
                        Name="BtnFolderKey"
                        Grid.Column="1"
                        Margin="20,20,20,20"
                        Click="BtnFolderKey_Click"
                        Content="Set folder">
                    </Button>
                    <Button
                        Name="BtnAES"
                        Grid.Column="2"
                        Margin="20,20,20,20"
                        Click="BtnAES_Click"
                        Content="Generate AES key/ IV">
                    </Button>
                    <Button
                        Name="BtnRSAPair"
                        Grid.Column="3"
                        Margin="20,20,20,20"
                        Click="BtnRSAPair_Click"
                        Content="Generate RSA key pair">
                    </Button>
                    <Button
                        Name="BtnHash"
                        Grid.Row="2"
                        Grid.Column="2"
                        Margin="20,20,20,20"
                        Click="BtnHash_Click"
                        Content="Check Hashes">
                    </Button>
                </Grid>

            </TabItem>
            <TabItem Header="AES">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition MaxHeight="100" />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>

                    <StackPanel>
                        <Label Content="Key:" />
                        <ComboBox Name="CmbAESKeys" Margin="10,0">
                        </ComboBox>
                        <Label Content="Encryption type:" />
                        <StackPanel Margin="10,0" Orientation="Horizontal">
                            <RadioButton
                                x:Name="ChkAesText"
                                Content="Text"
                                IsChecked="True" />
                            <RadioButton
                                x:Name="ChkAesImage"
                                Margin="10,0"
                                Content="Image" />
                        </StackPanel>
                    </StackPanel>

                    <StackPanel Grid.Column="1">
                        <Label HorizontalAlignment="Center" Content="Encryption" />
                        <Button
                            Name="BtnAESEncrypt"
                            Margin="10"
                            Click="BtnAESEncrypt_Click"
                            Content="Encrypt">
                        </Button>
                        <Button
                            Name="BtnAESDecrypt"
                            Margin="10,0"
                            Click="BtnAESDecrypt_Click"
                            Content="Decrypt">
                        </Button>
                    </StackPanel>

                    <StackPanel Grid.Column="2">
                        <Label HorizontalAlignment="Center" Content="Local Image" />
                        <Button
                            Name="BtnAESImage"
                            Margin="10,10"
                            Click="BtnAESImage_Click"
                            Content="Search PNG image">
                        </Button>
                    </StackPanel>

                    <StackPanel Grid.Column="4">
                        <Label HorizontalAlignment="Center" Content="Load" />
                        <Button
                            x:Name="BtnAesLoadText"
                            Margin="10"
                            Click="BtnAesLoadText_Click"
                            Content="Encrypted Text" />
                        <Button
                            x:Name="BtnAesLoadImage"
                            Margin="10,0"
                            Click="BtnAesLoadImage_Click"
                            Content="Encrypted PNG" />
                    </StackPanel>

                    <TextBox
                        x:Name="TxtAes"
                        Grid.Row="1"
                        Grid.RowSpan="3"
                        Grid.ColumnSpan="2"
                        Margin="15"
                        AcceptsReturn="True" />
                    <Image
                        x:Name="ImageAes"
                        Grid.Row="1"
                        Grid.RowSpan="3"
                        Grid.Column="2"
                        Grid.ColumnSpan="2"
                        Margin="15" />
                </Grid>
            </TabItem>
            <TabItem Header="RSA">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition MaxHeight="100" />
                        <RowDefinition MaxHeight="100" />
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <Label Content="Public key:">
                    </Label>
                    <ComboBox Name="CmbRSAPubKey" Margin="35">
                    </ComboBox>
                    <Label Grid.Row="1" Content="Private key:">
                    </Label>
                    <ComboBox
                        Name="CmbRSAPriKey"
                        Grid.Row="1"
                        Margin="35">
                    </ComboBox>
                    <Button
                        Name="BtnRSAEncrypt"
                        Grid.Column="1"
                        Margin="20"
                        Click="BtnRSAEncrypt_Click"
                        Content="Encrypt">
                    </Button>
                    <Button
                        Name="BtnRSADecrypt"
                        Grid.Column="2"
                        Margin="20"
                        Click="BtnRSADecrypt_Click"
                        Content="Decrypt">
                    </Button>
                    <Button
                        Name="BtnRSAImage"
                        Grid.Column="3"
                        Margin="20"
                        Click="BtnRSAImage_Click"
                        Content="Select Image">
                    </Button>
                    <Button
                        Name="BtnRSAFolder"
                        Grid.Column="4"
                        Margin="20"
                        Click="BtnRSAFolder_Click"
                        Content="Set folder">
                    </Button>
                </Grid>
            </TabItem>
        </TabControl>

    </Grid>
</Window>
